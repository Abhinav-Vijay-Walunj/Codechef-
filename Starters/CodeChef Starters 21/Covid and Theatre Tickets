#include<iostream>
#include<cmath>
typedef long long ll;
using namespace std;
int main()
{
    cin.tie(NULL);
    ios_base::sync_with_stdio(false);
    int t;
    cin>>t;
    while(t--)
{
    int n,m;
    cin>>n>>m;
    if(n%2 == 0)
    {
        n=n/2;
    }
    else
    {
        n=n/2+1;
    }
    
    if(m%2 == 0)
    {
        m=m/2;
    }
    else
    {
        m=m/2+1;
    }
    
    cout<<m*n<<endl;
}return 0;
}

